{
  "name": "Scheduler",
  "base": "KeyValueModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {},
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": ["onTickHook", "onTimeout", "createOrUpdate"]
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": ["createOrUpdate"]
    }
  ],
  "methods": {
    "onTickHook": {
      "description": ["Endpoint for timer instance callback ( Scheduler clock )"],
      "accepts": [
        {
          "arg": "body",
          "type": "object",
          "http": {
            "source": "body"
          }
        }
      ],
      "returns": {
        "root": true,
        "arg": "success",
        "type": "boolean"
      },
      "http": {
        "verb": "post",
        "path": "/on-tick"
      }
    },
    "onTimeout": {
      "description": ["Endpoint for timer instance callback ( Sensor timer )"],
      "accepts": [
        {
          "arg": "body",
          "type": "object",
          "http": {
            "source": "body"
          }
        }
      ],
      "returns": {
        "root": true,
        "arg": "success",
        "type": "boolean"
      },
      "http": {
        "verb": "post",
        "path": "/on-timeout"
      }
    },
    "createOrUpdate": {
      "description": ["Endpoint to parse scheduler events from a sensor"],
      "accepts": [
        {
          "arg": "device",
          "type": "object",
          "required": true
        },
        {
          "arg": "sensor",
          "type": "object",
          "required": true
        },
        {
          "arg": "client",
          "type": "object",
          "required": false
        }
      ],
      "returns": {
        "root": true,
        "arg": "result",
        "type": "object"
      },
      "http": {
        "verb": "post",
        "path": "/create-or-update"
      }
    }
  }
}
