{
  "name": "Scheduler",
  "base": "KeyValueModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {},
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": ["onTick", "onTimeout"]
    }
  ],
  "methods": {
    "onTick": {
      "description": ["Endpoint for timer instance callback ( Scheduler clock )"],
      "accepts": [
        {
          "arg": "body",
          "type": "object",
          "http": {
            "source": "body"
          }
        }
      ],
      "http": {
        "verb": "post",
        "path": "/on-tick"
      }
    },
    "onTimeout": {
      "description": ["Endpoint for timer instance callback ( Sensor timer )"],
      "accepts": [
        {
          "arg": "body",
          "type": "object",
          "http": {
            "source": "body"
          }
        }
      ],
      "http": {
        "verb": "post",
        "path": "/on-timeout"
      }
    }
  }
}
