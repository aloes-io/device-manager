{
  "name": "Measurement",
  "base": "PersistedModel",
  "plural": "Measurements",
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "defaultFn": "uuidv4"
    },
    "strValue": {
      "type": "string",
      "schema": "field",
      "required": false
    },
    "value": {
      "type": "number",
      "schema": "field",
      "index": true,
      "required": true
    },
    "timestamp": {
      "type": "number",
      "schema": "timestamp",
      "required": false
    },
    "type": {
      "type": "string",
      "required": true,
      "schema": "tag",
      "default": "3300"
    },
    "resource": {
      "type": "string",
      "required": true,
      "schema": "tag",
      "default": "5700"
    },
    "nativeSensorId": {
      "type": "string",
      "required": true,
      "schema": "tag",
      "default": "0"
    },
    "nativeNodeId": {
      "type": "string",
      "required": false,
      "schema": "tag",
      "default": "0"
    }
  },
  "hidden": [],
  "validations": [],
  "downSampling": [
    {
      "duration": "2h",
      "properties": { "value": "mean" },
      "group": [
        "ownerId",
        "deviceId",
        "sensorId",
        "nativeSensorId",
        "nativeNodeId",
        "type",
        "resource",
        "time(30m)"
      ]
    }
  ],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "ownerId",
      "options": {
        "nestRemoting": false
      }
    },
    "device": {
      "type": "belongsTo",
      "model": "Device",
      "foreignKey": "deviceId",
      "options": {
        "nestRemoting": false
      }
    },
    "sensor": {
      "type": "belongsTo",
      "model": "Sensor",
      "foreignKey": "sensorId",
      "options": {
        "nestRemoting": false
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "create",
        "exists",
        "find",
        "findById",
        "replaceById",
        "replace",
        "delete",
        "destroyById"
      ]
    }
  ],
  "methods": {
    "delete": {
      "accepts": [
        {
          "arg": "filter",
          "type": "object",
          "required": true
        },
        { "arg": "options", "type": "object", "http": "optionsFromRequest" }
      ],
      "returns": {
        "arg": "result",
        "type": "object"
      },
      "http": {
        "verb": "post",
        "path": "/destroy-all"
      }
    }
  }
}
