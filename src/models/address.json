{
  "name": "Address",
  "plural": "Addresses",
  "base": "PersistedModel",
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "street": {
      "type": "string",
      "default": "",
      "required": false
    },
    "streetName": {
      "type": "string",
      "required": false,
      "default": ""
    },
    "streetNumber": {
      "type": "number",
      "default": null,
      "required": false
    },
    "postalCode": {
      "type": "number",
      "default": null,
      "required": false
    },
    "city": {
      "type": "string",
      "default": "",
      "required": false
    },
    "coordinates": {
      "type": "geoPoint",
      "required": false,
      "description": "geolocation"
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "public": {
      "type": "boolean",
      "default": false
    }
  },
  "indexes": {
    "geo_index": {
      "keys": { "coordinates": "2dsphere" }
    }
  },
  "hidden": [],
  "validations": [],
  "relations": {
    "owner": {
      "type": "belongsTo",
      "polymorphic": true,
      "options": {
        "nestRemoting": false
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": [
        "updateAttributes",
        "upsert",
        "exists",
        "get",
        "find",
        "findById",
        "update",
        "replaceById",
        "replaceOrCreate",
        "upsertWithWhere"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "verifyAddress"
    }
  ],
  "methods": {
    "verifyAddress": {
      "description": ["Verify this address exists ( geocode - opencage)"],
      "accepts": [
        {
          "arg": "address",
          "type": "object"
        }
      ],
      "returns": {
        "arg": "updatedAddress",
        "type": "object"
      }
    }
  }
}
