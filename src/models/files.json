{
  "name": "files",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": false
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "string",
      "required": true
    },
    "size": {
      "type": "number",
      "required": false
    },
    "role": {
      "type": "string",
      "required": false
    },
    "url": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "ownerId",
      "options": {
        "nestRemoting": false
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": ["download", "upload", "uploadBuffer", "exists", "find", "findById"]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": [
        "download",
        "upload",
        "uploadBuffer",
        "remove",
        "exists",
        "find",
        "findById",
        "replaceById",
        "replaceOrCreate",
        "updateById",
        "updateAttributes"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "download"
    }
  ],
  "methods": {
    "upload": {
      "description": ["Uploads a fileObject"],
      "accepts": [
        {
          "arg": "ctx",
          "type": "object",
          "required": true,
          "http": {
            "source": "context"
          }
        },
        {
          "arg": "fk",
          "type": "string",
          "required": true
        },
        {
          "arg": "name",
          "type": "string",
          "required": false
        }
      ],
      "returns": {
        "arg": "fileObject",
        "type": "object",
        "root": true
      },
      "http": {
        "path": "/:fk/upload/:name",
        "verb": "post"
      }
    },
    "uploadBuffer": {
      "description": ["Uploads a buffer to pipe on a writeStream"],
      "accepts": [
        {
          "arg": "buffer",
          "type": "object",
          "required": true,
          "http": {
            "source": "body"
          }
        },
        {
          "arg": "fk",
          "type": "string",
          "required": true
        },
        {
          "arg": "name",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "root": true,
        "type": "object"
      },
      "http": {
        "path": "/:fk/upload-buffer/:name/",
        "verb": "post"
      }
    },
    "download": {
      "description": ["Downloads a fileObject"],
      "accepts": [
        {
          "arg": "ctx",
          "type": "object",
          "http": {
            "source": "context"
          }
        },
        {
          "arg": "fk",
          "type": "string",
          "required": true
        },
        {
          "arg": "name",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "type": "file",
        "root": true,
        "http": {
          "pipe": {
            "dest": "res"
          }
        }
      },
      "http": {
        "path": "/:fk/download/:name",
        "verb": "get"
      }
    },
    "remove": {
      "description": ["Removes a file"],
      "accepts": [
        {
          "arg": "fk",
          "type": "string",
          "required": true
        },
        {
          "arg": "name",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "arg": "result",
        "type": "boolean"
      },
      "http": {
        "path": "/:fk/remove/:name",
        "verb": "post"
      }
    }
  }
}
