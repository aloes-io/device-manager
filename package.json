{
  "name": "device-manager",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": ">=9.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "lint": "npx eslint --ext js .",
    "start": "babel-node ./index.js",
    "start:dev": "cp deploy/.env_development .env && NODE_ENV=development nodemon --exec babel-node ./src/index.js",
    "start:local": "cp deploy/.env_local .env && NODE_ENV=local nodemon --exec babel-node ./src/index.js",
    "start:stage": "cp deploy/.env_staging .env && NODE_ENV=staging nodemon --exec babel-node ./src/index.js",
    "docs:services": "jsdoc2md ./src/services/* > ./docs/services/README.md",
    "docs:models": "jsdoc2md ./src/models/* > ./docs/api/README.md",
    "docs:md": "npm run docs:services ; npm run docs:models",
    "docs:dev": "npm run docs:md ; cp ./README.md ./docs/readme/. ; vuepress dev docs",
    "docs:build": "npm run docs:md ; cp ./README.md ./docs/readme/. ; vuepress build docs",
    "docs:serve": "light-server -s public -p 7000 --servePrefix /device-manager/",
    "build": "npx babel src --out-dir dist --copy-files",
    "setup:stage": "cp deploy/.env_staging .env ; pm2 deploy ecosystem.config.js staging setup",
    "setup:prod": "cp deploy/.env_staging .env ; pm2 deploy ecosystem.config.js production setup",
    "update:stage": "cp deploy/.env_production .env ; pm2 deploy ecosystem.config.js staging update",
    "update:prod": "cp deploy/.env_production .env ; pm2 deploy ecosystem.config.js production update",
    "deploy:local": "cp deploy/.env_local .env ; npm run build ;  pm2 startOrRestart ecosystem.config.js --update-env",
    "deploy:stage": "pm2 startOrRestart ecosystem.config.js --env staging --update-env",
    "deploy:prod": "pm2 startOrRestart ecosystem.config.js --env production --update-env"
  },
  "dependencies": {
    "@babel/runtime": "^7.4.4",
    "aedes": "^0.38.0",
    "aloes-handlers": "^1.2.4",
    "body-parser": "^1.18.3",
    "colors": "^1.3.3",
    "compression": "^1.0.3",
    "connect-ensure-login": "^0.1.1",
    "cookie-parser": "^1.4.4",
    "cors": "^2.5.2",
    "dotenv": "^6.2.0",
    "ejs": "^2.6.1",
    "express": "^4.16.2",
    "express-flash": "0.0.2",
    "express-history-api-fallback": "^2.2.1",
    "express-http-proxy": "^1.5.0",
    "express-session": "^1.15.6",
    "helmet": "^3.13.0",
    "http-server": "^0.11.1",
    "iot-agent": "^1.0.4",
    "localtunnel": "^1.9.1",
    "loopback": "^3.16.2",
    "loopback-boot": "github:klarkc/loopback-boot#master",
    "loopback-component-explorer": "^6.3.1",
    "loopback-component-passport": "^3.10.0",
    "loopback-component-storage": "^3.6.1",
    "loopback-connector-mongodb": "^3.8.0",
    "loopback-connector-redis": "^3.0.0",
    "loopback-connector-rest": "^3.3.0",
    "loopback-ds-timestamp-mixin": "^3.4.1",
    "moment": "^2.22.2",
    "moment-recur": "^1.0.7",
    "node-cleanup": "^2.1.2",
    "node-geocoder": "^3.22.0",
    "oma-json": "^1.0.6",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0",
    "passport-local": "^1.0.0",
    "redis": "^2.8.0",
    "request": "^2.88.0",
    "shuffle": "^0.2.2",
    "strong-error-handler": "^2.0.0",
    "text-table": "^0.2.0",
    "uid": "0.0.2",
    "websocket-stream": "^5.5.0",
    "weighted": "^0.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.0.0",
    "acorn": "^6.1.0",
    "babel-eslint": "^8.2.6",
    "connect-history-api-fallback": "^1.5.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^11.3.0",
    "eslint-config-loopback": "^8.0.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-vue": "^4.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jsdoc-to-markdown": "^5.0.0",
    "light-server": "^2.6.0",
    "nodemon": "^1.18.8",
    "prettier": "1.16.1",
    "regenerator-runtime": "^0.11.1",
    "tfilter": "^1.0.1",
    "through2": "^2.0.3",
    "tmp": "0.0.33",
    "vuepress": "^1.0.0-alpha.47",
    "yargs": "^10.0.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-syntax-import-meta",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-json-strings",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      "@babel/plugin-proposal-function-sent",
      "@babel/plugin-proposal-export-namespace-from",
      "@babel/plugin-proposal-numeric-separator",
      "@babel/plugin-proposal-throw-expressions",
      "@babel/plugin-transform-runtime"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "loopback",
      "prettier"
    ],
    "plugins": [
      "babel",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "parser": "babel-eslint"
    },
    "rules": {
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "import/prefer-default-export": "off",
      "no-param-reassign": "off",
      "one-var-declaration-per-line": "off",
      "prettier/prettier": "error"
    },
    "globals": {
      "require": true
    }
  },
  "eslintIgnore": [
    "/public/",
    "/dist/",
    "/docs/",
    "/node_modules/"
  ],
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "jsxBracketSameLine": true,
    "trailingComma": "all"
  },
  "repository": {
    "type": "git",
    "url": "https://framagit.org/aloes/device-manager"
  },
  "license": "",
  "description": "IoT at work",
  "extended": true
}
